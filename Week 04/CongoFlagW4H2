// Congo Flag (Week 4 - Part 2)

var canW = 600 // Canvas Width
var canH = 380 // Canvas Height

function setup() {
  createCanvas(canW, canH);
  background(251, 222, 74);
}

function draw() {
  noStroke()
  fill(0, 149, 67) // Green Triangle
  triangle(0,0, canW*(2/3),0, 0,canH)
  fill(220, 36, 31) // Red Triangle
  triangle(canW, canH, canW*(1/3), canH, canW, 0)
}